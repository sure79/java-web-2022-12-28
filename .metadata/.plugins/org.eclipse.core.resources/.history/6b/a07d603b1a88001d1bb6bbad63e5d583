package chapter01;

public class Example07 {

	public static void main(String[] args) {
		// 제어문( 반복) while
		boolean flag = true;
		int number = 0;
		while (flag) {
			System.out.println("Loop");
			
			number  = number + 1;
			System.out.println("Loop" + number);
			if (number == 10) {
				flag = false;
			}
		}
	}

}
