package chapter01;

public class Example01 {

	public static void main(String[] args) {
		// 데이터타입
		//
		// 정수형 타입
		// byte(1 byte), short (2 byte) , int (4 byte), long (8byte)
		byte b1 = 0;
		byte b2 = 127;
		byte b3 = -128;
		
		short s1 = 128;
		short s2  = 32767;
		short s3 = -32768;
		
		
		int i1 = 32768;
		int i2 = 2_147_483_647;
		int i3 = -2_147_483_648;
		
		
		long l1 =  2_147_483_648L;
		
		
		// 실수 타입 
		// float( 4 byte), double ( 8 byte)
		
		float f1 = 3.1415F;
		double d1 = 3.1415;
		
		// 논리 타입
		// boolean (1 byte)
		boolean bool1 = true;
		boolean bool2 = false;

		//문자 타입
		//char (2 byte)
		char c1 = 'a';
		char c2 = 97 ;
		
		System.out.println(c1);
		System.out.println(c2);
		
		
		
		
	}

}
